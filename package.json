{
  "name": "typescript-action",
  "version": "0.0.0",
  "private": true,
  "description": "TypeScript template action",
  "main": "lib/main.js",
  "scripts": {
    "build": "esbuild src/restore.ts --bundle --platform=node --outfile=dist/restore/index.js --minify --sourcemap && esbuild src/save.ts --bundle --platform=node --outfile=dist/save/index.js --minify --sourcemap",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "test": "echo 'No test framework configured'",
    "all": "npm run build && npm run format-check && npm run lint && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/actions/typescript-action.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/cache": "^4.1.0",
    "@actions/core": "^3.0.0",
    "@actions/glob": "^0.5.0"
  },
  "devDependencies": {
    "@types/node": "^25.0.9",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^6.20.0",
    "esbuild": "^0.27.3",
    "eslint": "^8.57.0",
    "eslint-plugin-github": "^4.10.2",
    "js-yaml": "^4.1.1",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3"
  }
}
